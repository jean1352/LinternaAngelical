<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFF</item>
        <item name="dialogCornerRadius">21dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/positiveButtonStyle</item>
        <item name="dialogPreferredPadding">30dp</item>
        <item name="buttonBarNegativeButtonStyle">@style/negativeButtonStyle</item>
    </style>

    <style name="positiveButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/dialog_rounded</item>
        <item name="android:backgroundTint">@android:color/holo_red_dark</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="negativeButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:backgroundTint">@color/colorTransparent</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>