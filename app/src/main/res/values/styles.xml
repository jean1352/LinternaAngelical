<resources>

    <!-- Base application theme. -->

    <style name="FullScreen" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#5ab65a</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="PhoneAuth" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">#FFF</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="dialogCornerRadius">21dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/positiveButtonStyle</item>
        <item name="dialogPreferredPadding">30dp</item>
    </style>

    <style name="dialogMessage">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="positiveButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/dialog_rounded</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="negativeButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">#000</item>
        <item name="colorAccent">@color/colorTransparent</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ThemeOverlay.MyNoTitleActivity" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Light EditTexts -->
    <style name="ThemeOverlay.MyLightEditText" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="ThemeOverlay.MyTextDetail" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeOverlay.FirebaseIcon" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/icon_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/icon_bottom_margin</item>
    </style>

    <style name="ThemeOverlay.MyTitleText" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextAppearance.Name" parent="TextAppearance.AppCompat.Headline">

        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="TextAppearance.Bottom" parent="TextAppearance.AppCompat.Headline">

        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="TextAppearance.BottomSelected" parent="TextAppearance.AppCompat.Headline">

        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:textAppearance">@style/TextAppearance.Name</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomSelected</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Bottom</item>
    </style>

</resources>
